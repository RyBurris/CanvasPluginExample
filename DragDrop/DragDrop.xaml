<UserControl x:Class="Canvas.Controls.Example.DragDrop.DragDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Canvas.Controls.Example.DragDrop">

    <UserControl.DataContext>
        <local:DragDropViewModel x:Name="vm"/>
    </UserControl.DataContext>

    <Grid Background="LightSkyBlue">
        <Border BorderBrush="White">
            <TextBlock Text="Drag points here!" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
